<!DOCTYPE html>
<html lang="fr" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="D√©couvrez des artistes et leurs concerts">
    <link rel="icon" href="/static/img/favicon.ico" type="image/x-icon">
    <title>{{.Title}}</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/static/css/filters.css">
</head>
<body class="min-h-screen bg-linear-to-br from-neutral-950 via-neutral-900 to-neutral-950 text-neutral-100 antialiased">
    
    <!-- HEADER -->
    <header class="sticky top-0 z-50 backdrop-blur-xl bg-neutral-950/80 border-b border-neutral-800/50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <h1 class="text-3xl md:text-4xl font-bold text-center text-white">
                {{.Title}}
            </h1>
           <div class="text-right text-neutral-400">
               {{if .IsAuthenticated}}
    <a href="profile" class="hover:underline">Mon profil</a> ‚Ä¢
    <a href="logout" class="hover:underline">Se d√©connecter</a>
    {{else}}
    <a href="login" class="hover:underline">Se connecter</a>
    <a href="register" class="hover:underline ml-4">S'inscrire</a>
    {{end}}
</div>

        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
        
        <!-- SEARCH BAR -->
        <section aria-label="Recherche" class="w-full max-w-2xl mx-auto">
            <form id="filterForm" method="GET" action="/" class="space-y-8">
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- ANN√âE DE CR√âATION -->
        <div class="space-y-4">
            <div class="flex items-center gap-3">
                <div class="shrink-0 w-10 h-10 bg-neutral-800 rounded-xl flex items-center justify-center">
                    <span class="text-xl">üìÖ</span>
                </div>
                <h3 class="text-lg font-semibold text-white">Ann√©e de cr√©ation</h3>
            </div>
            
            <div class="space-y-4 pl-13">
                <!-- Minimum -->
                <div class="space-y-2">
                    <div class="flex justify-between items-center gap-3">
                        <label for="creationMin" class="text-sm text-neutral-400">Minimum</label>
                        <input 
                            type="number" 
                            id="creationMinInput"
                            min="1960" 
                            max="2023"
                            value="1960"
                            class="w-20 bg-neutral-800 border border-neutral-700 rounded-lg px-3 py-1 text-sm text-white font-mono font-bold text-center focus:outline-none focus:border-white transition"
                        >
                    </div>
                    <input 
                        type="range" 
                        name="creation_year_min" 
                        id="creationMin"
                        min="1960" 
                        max="2023" 
                        value="1960"
                        class="range-slider range-white"
                    >
                </div>
                
                <!-- Maximum -->
                <div class="space-y-2">
                    <div class="flex justify-between items-center gap-3">
                        <label for="creationMax" class="text-sm text-neutral-400">Maximum</label>
                        <input 
                            type="number" 
                            id="creationMaxInput"
                            min="1960" 
                            max="2023"
                            value="2023"
                            class="w-20 bg-neutral-800 border border-neutral-700 rounded-lg px-3 py-1 text-sm text-white font-mono font-bold text-center focus:outline-none focus:border-white transition"
                        >
                    </div>
                    <input 
                        type="range" 
                        name="creation_year_max" 
                        id="creationMax"
                        min="1960" 
                        max="2023" 
                        value="2023"
                        class="range-slider range-white"
                    >
                </div>
            </div>
        </div>

        <!-- PREMIER ALBUM -->
        <div class="space-y-4">
            <div class="flex items-center gap-3">
                <div class="shrink-0 w-10 h-10 bg-neutral-800 rounded-xl flex items-center justify-center">
                    <span class="text-xl">üíø</span>
                </div>
                <h3 class="text-lg font-semibold text-white">Premier album</h3>
            </div>
            
            <div class="space-y-4 pl-13">
                <!-- Minimum -->
                <div class="space-y-2">
                    <div class="flex justify-between items-center gap-3">
                        <label for="albumMin" class="text-sm text-neutral-400">Minimum</label>
                        <input 
                            type="number" 
                            id="albumMinInput"
                            min="1960" 
                            max="2023"
                            value="1960"
                            class="w-20 bg-neutral-800 border border-neutral-700 rounded-lg px-3 py-1 text-sm text-white font-mono font-bold text-center focus:outline-none focus:border-white transition"
                        >
                    </div>
                    <input 
                        type="range" 
                        name="album_year_min" 
                        id="albumMin"
                        min="1960" 
                        max="2023" 
                        value="1960"
                        class="range-slider range-white"
                    >
                </div>
                
                <!-- Maximum -->
                <div class="space-y-2">
                    <div class="flex justify-between items-center gap-3">
                        <label for="albumMax" class="text-sm text-neutral-400">Maximum</label>
                        <input 
                            type="number" 
                            id="albumMaxInput"
                            min="1960" 
                            max="2023"
                            value="2023"
                            class="w-20 bg-neutral-800 border border-neutral-700 rounded-lg px-3 py-1 text-sm text-white font-mono font-bold text-center focus:outline-none focus:border-white transition"
                        >
                    </div>
                    <input 
                        type="range" 
                        name="album_year_max" 
                        id="albumMax"
                        min="1960" 
                        max="2023" 
                        value="2023"
                        class="range-slider range-white"
                    >
                </div>
            </div>
        </div>

        <!-- NOMBRE DE MEMBRES -->
        <div class="space-y-4">
            <div class="flex items-center gap-3">
                <div class="shrink-0 w-10 h-10 bg-neutral-800 rounded-xl flex items-center justify-center">
                    <span class="text-xl">üë•</span>
                </div>
                <h3 class="text-lg font-semibold text-white">Nombre de membres</h3>
            </div>
            <div class="space-y-3 pl-13">
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="1" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">1 membre</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="2" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">2 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="3" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">3 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="4" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">4 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="5" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">5 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="6" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">6 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="7" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">7 membres</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input type="checkbox" name="member_count" value="8" class="w-5 h-5 bg-neutral-800 border-2 border-neutral-600 rounded checked:bg-white checked:border-white focus:outline-none focus:ring-2 focus:ring-white/50 transition cursor-pointer">
                    <span class="text-sm text-neutral-300 group-hover:text-white transition">8 membres</span>
                </label>
            </div>
        </div>
    </div>

    <!-- LIEUX DE CONCERTS -->
    <div class="space-y-4 col-span-full">
        <div class="flex items-center gap-3">
            <div class="shrink-0 w-10 h-10 bg-neutral-800 rounded-xl flex items-center justify-center">
                <span class="text-xl">üåç</span>
            </div>
            <h3 class="text-lg font-semibold text-white">Lieux de concerts</h3>
        </div>

        <div class="pl-13">
            <div class="relative">
                <select
                    id="locationSelect"
                    multiple
                    size="5"
                    name="location"
                    class="w-full bg-neutral-800 border border-neutral-700 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-white transition"
                >
                    <option value="" disabled class="text-neutral-500">S√©lectionnez un ou plusieurs lieux (Ctrl/Cmd + Clic)</option>
                    {{range .AllLocations}}
                    <option value="{{.}}" class="py-2">{{.}}</option>
                    {{end}}
                </select>
                <p class="mt-2 text-xs text-neutral-500">
                    Maintenez Ctrl (Windows/Linux) ou Cmd (Mac) pour s√©lectionner plusieurs lieux
                </p>
            </div>
        </div>
    </div>
</div>

    <!-- ACTION BUTTONS -->
    <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-neutral-700">
        <button 
            type="submit" 
            class="flex-1 px-6 py-4 bg-white hover:bg-neutral-200 text-black rounded-xl font-semibold transition-all duration-300 flex items-center justify-center gap-3 shadow-lg hover:-translate-y-0.5"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            <span>Appliquer les filtres</span>
        </button>
        
        <button 
            type="button" 
            id="resetFilters"
            class="px-6 py-4 bg-neutral-800 hover:bg-neutral-700 border border-neutral-600 hover:border-neutral-500 rounded-xl font-semibold transition-all duration-300 flex items-center justify-center gap-3"
        >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <span>R√©initialiser</span>
        </button>
    </div>
    <!-- Active Badges -->
    <div id="activeBadges" class="hidden flex-wrap gap-2" role="status" aria-live="polite"></div>
</form>

            </div>
        </section>

        <!-- RESULTS -->
        <section aria-label="R√©sultats" class="space-y-6">
            <div class="flex items-center justify-between">
                <p class="text-neutral-400">
                    <span class="text-4xl font-bold text-white">{{len .Artists}}</span>
                    <span class="ml-2 text-sm">artiste{{if ne (len .Artists) 1}}s{{end}} trouv√©{{if ne (len .Artists) 1}}s{{end}}</span>
                </p>
            </div>

            <!-- Artists Grid -->
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-6">
                {{range .Artists}}
                <article class="group">
                    <a href="/artist/{{.ID}}" class="block">
                        <div class="relative aspect-square overflow-hidden rounded-2xl bg-neutral-800 shadow-lg transition-all duration-300 group-hover:shadow-2xl group-hover:shadow-white/10 group-hover:-translate-y-2">
                            <img
                                src="{{.Image}}"
                                alt="Photo de {{.Name}}"
                                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                                loading="lazy"
                            >
                            <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <div class="absolute bottom-0 left-0 right-0 p-4 space-y-1">
                                    <p class="text-xs text-neutral-300">{{len .Members}} membre{{if ne (len .Members) 1}}s{{end}} ‚Ä¢ {{.CreationDate}}</p>
                                </div>
                            </div>
                        </div>
                        <h2 class="mt-3 text-center text-sm font-medium text-neutral-300 group-hover:text-white transition-colors">
                            {{.Name}}
                        </h2>
                    </a>
                </article>
                {{end}}
            </div>

            <!-- Empty State -->
            {{if not .Artists}}
            <div class="flex flex-col items-center justify-center py-20 text-center">
                <div class="w-20 h-20 mb-6 rounded-full bg-neutral-800 flex items-center justify-center">
                    <span class="text-4xl">üîç</span>
                </div>
                <h2 class="text-2xl font-bold text-neutral-300 mb-2">Aucun artiste trouv√©</h2>
                <p class="text-neutral-500 mb-6">Essayez de modifier vos crit√®res de recherche</p>
                <button 
                    onclick="document.getElementById('resetFilters').click()"
                    class="px-6 py-3 bg-white hover:bg-neutral-200 text-black rounded-xl font-semibold transition-colors"
                >
                    R√©initialiser les filtres
                </button>
            </div>
            {{end}}
        </section>
    </main>

    <!-- FOOTER -->
    <footer class="border-t border-neutral-800 mt-20 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-sm text-neutral-500">
            <p>&copy; 2026 Groupie Tracker - Axel B. & Mathys P.K - Tous droits r√©serv√©s</p>
        </div>
    </footer>
    <script src="/static/js/filters.js"></script>
    </body>
</html>
