<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/static/img/favicon.ico?v=1">
    <title>{{.Title}} - Groupie Tracker</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
<style>
/* Container des suggestions */
.suggestions-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #1a1a1a;
    border: 1px solid #404040;
    border-radius: 0 0 12px 12px;
    max-height: 300px;
    overflow-y: auto;
    z-index: 1000;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

/* Une suggestion */
.suggestion-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    cursor: pointer;
    border-bottom: 1px solid #2a2a2a;
    transition: background-color 0.2s;
}

.suggestion-item:hover,
.suggestion-item.selected {
    background-color: #2a2a2a;
}

/* Texte principal */
.suggestion-text {
    flex: 1;
    color: #ffffff;
    font-weight: 500;
}

/* Type (artiste/membre) */
.suggestion-type {
    color: #888;
    font-size: 12px;
    text-transform: uppercase;
    margin-left: 8px;
}
</style>
</head>
<body class="min-h-screen bg-linear-to-br from-black via-neutral-900 to-neutral-800 text-white selection:bg-white selection:text-black">
    <div class="max-w-7xl mx-auto px-6 py-10">
        <!-- HEADER AVEC RECHERCHE -->
        <div class="flex items-center justify-between mb-8">
            <a href="/" class="text-2xl font-bold hover:text-neutral-300 transition">
                ← Groupie Tracker
            </a>
        </div>

        <!-- BARRE DE RECHERCHE -->
        <div class="flex justify-center mb-8">
            <form action="/search" method="GET" class="relative group w-full max-w-2xl">
                <div class="absolute -inset-1 bg-linear-to-r from-neutral-600 to-neutral-400 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-500"></div>
                <div class="relative flex items-center bg-black rounded-full border border-neutral-700" style="position: relative;">
                    <input
                        type="text"
                        id="searchInput"
                        name="q"
                        value="{{.Query}}"
                        placeholder="Rechercher..."
                        class="w-full bg-transparent px-6 py-3 text-white placeholder-neutral-500 focus:outline-none"
                        autocomplete="off"
                    >
                    <button type="submit" class="px-6 py-3 bg-white text-black hover:bg-neutral-200 transition flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="6" />
                            <line x1="16.5" y1="16.5" x2="21" y2="21" />
                        </svg>
                    </button>
                </div>
            </form>
        </div>

        <!-- RÉSULTATS -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold mb-2">{{.Title}}</h1>
            <p class="text-neutral-400">
                {{if .Count}}
                    {{.Count}} résultat{{if ne .Count 1}}s{{end}} pour "{{.Query}}"
                {{else}}
                    Aucun résultat pour "{{.Query}}"
                {{end}}
            </p>
        </div>

        <!-- GRILLE DES ARTISTES -->
        {{if .Artists}}
        <div class="grid gap-x-10 gap-y-12 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 place-items-center">
            {{range .Artists}}
            <a href="/artist/{{.ID}}" class="group w-40">
                <div class="w-40 h-40 bg-white rounded-3xl overflow-hidden shadow-2xl transition-transform duration-300 group-hover:-translate-y-2">
                    <img
                        src="{{.Image}}"
                        alt="{{.Name}}"
                        class="w-full h-full object-cover"
                        loading="lazy"
                    >
                </div>
                <p class="mt-3 text-center text-sm text-neutral-200 group-hover:text-white">
                    {{.Name}}
                </p>
                <p class="text-xs text-neutral-500 text-center mt-1">
                    {{len .Members}} membre{{if ne (len .Members) 1}}s{{end}}
                </p>
            </a>
            {{end}}
        </div>
        {{else}}
        <!-- ÉTAT VIDE -->
        <div class="flex flex-col items-center justify-center py-20 opacity-60">
            <div class="mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-neutral-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="6" />
                    <line x1="16.5" y1="16.5" x2="21" y2="21" />
                </svg>
            </div>
            <p class="text-lg text-neutral-400 mb-2">Aucun résultat trouvé</p>
            <p class="text-sm text-neutral-500">
                Essayez avec un nom d'artiste ou de membre différent
            </p>
            <a href="/" class="mt-4 px-6 py-2 bg-white text-black rounded-full hover:bg-neutral-200 transition">
                Voir tous les artistes
            </a>
        </div>
        {{end}}
    </div>

    <!-- FOOTER -->
    <footer class="border-t border-neutral-700 mt-16 py-6">
        <div class="max-w-7xl mx-auto px-6 text-center text-sm text-neutral-500">
            &copy; 2026 Groupie-Tracker. Mathys P.K - Axel B. - Tous droits réservés.
        </div>
    </footer>

    <!-- JavaScript pour les suggestions -->
    <script src="/static/js/search-suggestions.js"></script>
</body>
</html>
